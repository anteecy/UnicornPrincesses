<div>
	<h3>Status:</h3>
	<% if @application.status == 1 %>
		<p>Accepted</p>
    <%end%>
    <% if @application.status == 2 %>
		<p>Rejected</p>
    <%end%>
    <% if @application.status == 0 %>
    	<p>Pending</p>
    <%end%>

    <h3>Applicant:</h3>
    <p id="attribute"><%= @application.first_name + " " + @application.last_name %></p>

    <h3>Contact:</h3>
    <p id="attribute"><%= @application.email %></p>

    <h3>Desired Section:</h3>
    <p id="attribute"><%= @application.courses %></p>

    <h3>Course Number:</h3>
    <p id="attribute"><%= Course.where(section_number: @application.courses).first.course_number %></p>

    <h3>Course Days:</h3>
    <p id="attribute"><%= Course.where(section_number: @application.courses).first.days %></p>

    <h3>Course Start Time:</h3>
    <p id="attribute"><%= Course.where(section_number: @application.courses).first.start_time %></p>


    <% if current_user.is_teacher? %>
    <h3>Recommendations:</h3>
    <p id="attribute"><td><%= link_to 'Recommendation', {:controller => "recommandationform", :action => "show", :id => @application.id } %></p>

	<p id="attribute"><div style="float: left; width: auto;"><%= button_to "Accept Student","accept", class: "left-button",params:{"subid" => @application.id} %></div>

    <div style="float: right; width:auto;"><%= button_to "Reject Student","reject", class: "right-button", params:{"subid" => @application.id} %></div></p>
    <%end%>
</div>
