<% if user_signed_in? && current_user.is_teacher %>
    <div id="form-wrapper">
        <h2>Endorse a student</h2>

        <%= form_with scope: :recommandations, local: true do |f| %>
            
            <p>
                <%= f.label :email %><br>
                <%= f.email_field :email, :value => current_user.email %><br>
            </p>

            <p>
                <%= f.label :recommanded %><br>
                <%= f.check_box :recommanded %>
            </p>

            <p>
                <%= f.label :context %><br>
                <%= f.text_area :context %>
            </p>

            <p>
                <%= f.submit :subaction => 'create'%>
            </p>
        <% end %>
    </div>
<% else %>
    <p>Only teachers may endorse students.</p>
<% end %>
